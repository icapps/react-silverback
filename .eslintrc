{
	"root": true,
	"env": {
		"browser": true,
		"es6": true,
		"node": true,
		"jest": true
	},
	"extends": "react-app",
	"rules": {
		"comma-dangle": ["error", {
      "arrays": "always",
      "objects": "always",
      "imports": "never",
      "exports": "never",
      "functions": "ignore"
    }],
		"padded-blocks": [ "error", "never" ],
		"no-console": "warn",
		"semi": [ "error", "always" ]
	}
}
